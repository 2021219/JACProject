<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Judith Collins MP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="@Url.Content("~/Content/Navbar.css")" type="text/css" />
    <style>
        ﻿a:link, a:visited {
            
            color: black;
            
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        a:hover, a:active {
            background-color: lightblue;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top float-none">
            <div class="container">
                <div class="navbar-header">
                    <h1>Judith Collins</h1>
                </div>
                <div>
                    <p class="nav" style="background-color: green; padding: 10px 16px;">
                        @Html.ActionLink("Home", "Home", "Main", null, new { @class = "navLink" })
                        @Html.ActionLink("Views", "Views", "Main", null, new { @class = "navLink" })
                        @Html.ActionLink("Judith Says", "JudithSays", "Main", null, new { @class = "navLink" })
                        @Html.ActionLink("Contact", "Contact", "Main", null, new { @class = "navLink" })
                        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "navLink" })
                        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "navLink"})
                    </p>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p>Authorised by Judith Collins MP, Roselands Shopping Ctr, 98 Great South Road, Papakura.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
