<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Judith Collins MP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="@Url.Content("~/Content/Navbar.css")" type="text/css" />
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top float-none">
            <div class="container">
                <div class="navbar-header">
                    <h1>Judith Collins</h1>
                </div>
                <div>
                    <p class="nav">
                        @Html.ActionLink("Home", "Home", "Main")
                        @Html.ActionLink("Views", "Views", "Main")
                        @Html.ActionLink("Judith Says", "JudithSays", "Main")
                        @Html.ActionLink("Contact", "Contact", "Main")
                        @Html.ActionLink("Register", "Register", "Account")
                        @Html.ActionLink("Log in", "Login", "Account")
                    </p>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p>Authorised by Judith Collins MP, Roselands Shopping Ctr, 98 Great South Road, Papakura.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
