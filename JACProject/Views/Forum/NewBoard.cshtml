@model JACProject.Database.Board

@{
    ViewBag.Title = "NewBoard";
}

<h2>NewBoard</h2>


<div>
    @using (Html.BeginForm("PostNewBoard", "Forum", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table>
            <tr>
                <td><label>Name:</label></td>
                <td>
                    @Html.TextBoxFor(x => x.name)
                </td>
            </tr>
            @Html.HiddenFor(x => x.id, new { @Value = ViewBag.ThreadID })
            <tr>
                <td>
                    <button type="submit">Create</button>
                </td>
            </tr>
        </table>
    }
</div>
