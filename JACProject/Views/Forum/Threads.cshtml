@model JACProject.Database.Thread

@{
    ViewBag.Title = "Threads";
}
<head>

    <script>



        window.onload = function (postID) {
            document.getElementById(postID).style.height = document.getElementById(postID).style.height;
        }
    </script>

    <style>
        div {
            padding-top: 0px;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            margin-left: 0px;
            margin-bottom: 0px;
            margin-right: 0px;
            margin-top: 0px;
            display: block;
        }

        .userInfo {
            position:absolute;
            left: 0px;
            top: 0px;
            bottom: 0px;
            clear: right;
            width: 40%;
            overflow-x: hidden;
            overflow-y:auto;
            padding-left:5px;
            overflow-wrap:break-word;
            display: inline-block;
        }

        .postData{
            height: 100%;
            width: 100%;
            display: block;
            text-wrap:normal;
            overflow-x: hidden;
            overflow-y: auto;
            position: relative;
            right: 0px;
            top: 0px;
            bottom: 0px;
        }

        .forumActionButtonsContainer {
            display: block;
        }

        .forumActionButton{
            float: right;
            clear: both;
        }

        .postHeader{
            padding-bottom: 0px;
            margin-bottom: 0px;
        }

        .postMain{
            padding-top: 0px;
            margin-top: 0px;
            position: relative;
            height:300px;
        }

        .postPanel{
            padding: 0px;
            margin: 0px;
            width: 100%;
        }
        .postDate
        {
            display: inline-block;
            width:50%;
        }
        .postTitle
        {
            display: inline-block;
            
        }
        .postInfo {
            position: absolute;
            right: 0px;
            top: 0px;
            bottom: 0px;
            width: 60%;
            display: inline-block;
            padding: 0px 0px 0px 0px;
            background-color: white;
            text-wrap: normal;
            overflow-x: hidden;
            overflow-y: auto;
        }
        .profilePostImage{
            height: 50%;
        }
    </style>
</head>

<body style="background-color: #318FCD">
    @if (Model.title != null)
    {
        <h2 style="text-align:center">@Model.title</h2>
    }
        <div>
            <button class="ForumActionButton">@Html.ActionLink("New Post", "CreatePost", "Forum", new { threadID = Model.id }, "")</button>
        </div>

    <hr />

    <div>
        @foreach (var item in Model.content)
        {
            <div class="postPanel">
            <div class="postHeader" style="background-color:aqua">
                <div class="postDate">
                    @item.timeCreated.ToString()
                </div>
                <div class="postTitle">
                    @item.title
                </div>
            </div>
            <Div class="postMain" width="100%">
                <div class="userInfo" style="background-color:grey">
                    <div class="userName">
                        @item.creator.name
                    </div>
                        <img class="profilePostImage" src="https://upload.wikimedia.org/wikipedia/commons/3/32/Selwyn_Image_1900.jpg" />
