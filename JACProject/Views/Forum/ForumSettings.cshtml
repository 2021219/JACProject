@model JACProject.Database.Account

@{
    ViewBag.Title = "ForumSettings";
}
<body style="background-color:red">
    <h2>Forum Settings</h2>

    @using (Html.BeginForm("Adjustsettings", "Forum", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Account</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                <label class="control-label; col-md-2">Username:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nickName, new { htmlAttributes = new { @class = "form-control", @value = Model.nickName } })
                    @Html.ValidationMessageFor(model => model.nickName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label; col-md-2">Location:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control", @value = Model.location } })
                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label; col-md-2">Profile Image URL:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.profileImageURL, new { htmlAttributes = new { @class = "form-control", @value = Model.profileImageURL } })
                    @Html.ValidationMessageFor(model => model.profileImageURL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label; col-md-2">Show Email:</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.showEmail, new { htmlAttributes = new { @value = Model.showEmail } })
                        @Html.ValidationMessageFor(model => model.showEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit">Submit</button>
                </div>
            </div>
        </div>
    }
</body>